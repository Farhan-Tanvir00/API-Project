@model Shirt

<div class="container">

    <form asp-action="UpdateShirt" method="post">
        <div class="text-danger" asp-validation-summary="All"></div>

        <input asp-for="ID" type="hidden" />
        <div class="mb-2 row">
            <div class="col-2">
                <label asp-for="Color" class="col-form-label">Color</label>
            </div>
            <div class="col-8">
                <input asp-for="Color" type="text" class="form-control" required />
            </div>
            <div class="col">
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-2 row">
            <div class="col-2">
                <label asp-for="Size" class="col-form-label">Size</label>
            </div>
            <div class="col-8">
                <input asp-for="Size" type="number" class="form-control" min="1" required />
            </div>
            <div class="col">
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-2 row">
            <div class="col-2">
                <label asp-for="Price" class="col-form-label">Price</label>
            </div>
            <div class="col-8">
                <input asp-for="Price" type="number" class="form-control" min="1" required />
            </div>
            <div class="col">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-2 row">
            <div class="col-2">
                <label asp-for="Gender" class="col-form-label">Gender</label>
            </div>
            <div class="col-8">
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="man" checked />
                    <label class="form-check-label" asp-for="Gender">Man</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" asp-for="Gender" value="women" />
                    <label class="form-check-label" asp-for="Gender">Women</label>
                </div>
            </div>
            <div class="col">
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
        </div>

        <div class="mb-2 row">
            <div class="col-2"></div>
            <div class="col-8 text-end">
                <input type="submit" class="btn btn-primary" value="Save" />
                <a class="btn btn-secondary" asp-controller="Shirt" asp-action="Index">Back</a>

            </div>
        </div>

    </form>

</div>